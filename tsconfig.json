{
  "compilerOptions": {
    "target": "es2016",                 // Specify ECMAScript target version
    "module": "commonjs",               // Specify module code generation
    "strict": true,                     // Enable all strict type-checking options
    "esModuleInterop": true,            // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true,               // Skip type checking of declaration files
    "outDir": "./dist",                 // Redirect output structure to the directory
    "rootDir": "./src",                 // Specify the root directory of input files
    "types": [
      "node",                            // Include types from the Node.js library
      "express",                         // Include types from the Express library
      "cors",                            // Include types from the CORS library
      "mongoose"                         // Include types from the Mongoose library
    ]
  },
  "include": ["src/**/*"],               // Include all files in the src directory
  "exclude": ["node_modules", "**/*.spec.ts"]  // Exclude node_modules and spec files
}
